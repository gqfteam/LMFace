<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.lmface">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name=".application.LMFaceApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Main.MainActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait"
            >

        </activity>
        <activity android:name=".Login.LoginActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait"
                  android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
        <activity android:name=".User.MyGoodsListActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait"/>
        <activity android:name=".User.AddOrUpdateGoodsActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait"/>
        <activity android:name=".store.GoodsDetailsActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait">

        </activity>
        <activity android:name=".store.ShopCarActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait"/>

        <activity android:name=".address.AddressListActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait"/>
        <activity android:name=".address.EdiAddressActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait">

        </activity>
        <activity android:name=".store.OrderGoodsActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".address.SelectAddressActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".order.MyOrderListActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait"/>
        <activity android:name=".order.MyStoreOrderListActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait"/>
    </application>

</manifest>