<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/hugehxxxxdp"
              android:background="@color/white"
    android:layout_marginTop="@dimen/activity_horizontal_margin">

    <ImageView
        android:layout_width="@dimen/tinyhdp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:src="@drawable/left_arrorw"/>

    <LinearLayout
        android:id="@+id/address_msg_lin"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/tinyhdp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/address_item_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="郭青枫"
                android:gravity="bottom"
                android:textSize="@dimen/mediumxsp"
                android:textColor="@color/black"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
            <TextView
                android:id="@+id/address_item_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="12345678"
                android:gravity="bottom|right"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textSize="@dimen/mediumxsp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <TextView
            android:id="@+id/address_item_msg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/mediumsp"
            android:gravity="center_vertical"
            android:text="hdasdhakjlsdnljahsdkjahsdkjahndkjlasjkfdbaskjcbkajbvkhajfvkjhadkjfhks;djfhn;kdsjnfkjlsdckjsad"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="@color/black"/>
    </LinearLayout>
</RelativeLayout>