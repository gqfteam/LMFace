<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/hugehdp"
    android:background="?android:selectableItemBackground"
    >

    <ImageView
        android:id="@+id/add_friends_list_item_img"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_launcher"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/smallhdp"
        android:layout_height="@dimen/smallhdp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2.5"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/add_friends_list_item_txt1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="gqf"
            android:textColor="@color/black"
            android:textSize="@dimen/mediumxsp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"/>
        <TextView
            android:id="@+id/add_friends_list_item_txt2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="gqfdasdadsasdasdasd"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="@dimen/mediumsp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"/>
    </LinearLayout>

    <Button
        android:id="@+id/add_friends_list_item_yes"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/apply_for_selector"
        android:text="同意"
        android:textColor="@color/white"
        android:layout_margin="@dimen/mediummdp"
        android:textSize="@dimen/mediumxsp"/>
    <Button
        android:id="@+id/add_friends_list_item_no"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/red_button_background"
        android:text="拒绝"
        android:textColor="@color/white"
        android:layout_margin="@dimen/mediummdp"
        android:textSize="@dimen/mediumxsp"/>
</LinearLayout>