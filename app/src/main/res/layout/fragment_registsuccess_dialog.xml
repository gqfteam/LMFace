<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="#00000000">
    <View
        android:id="@+id/top_view"
        android:layout_width="wrap_content"
        android:background="#00000000"
        android:layout_height="@dimen/smallhdp"/>
    <LinearLayout
        android:layout_below="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tinyhdp"
        android:layout_marginRight="@dimen/tinyhdp"
        android:background="@drawable/dialog_rel_shap"
        android:paddingTop="@dimen/hugehdp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/commit_txt_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="恭喜您,注册成功!"
            android:textSize="@dimen/mediumsp"
            android:layout_margin="@dimen/tinymdp"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/commit_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/tinyhdp"
            android:layout_marginLeft="@dimen/tinyhdp"
            android:layout_marginRight="@dimen/tinyhdp"
            android:layout_marginBottom="@dimen/tinyhdp"
            android:background="@drawable/apply_for_selector"
            android:text="立即登录"
            android:textSize="@dimen/bigsp"
            android:textColor="@color/white"
            />
    </LinearLayout>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/regist_success"
    android:scaleType="fitXY"
    android:adjustViewBounds="true"
    android:background="#00000000"
    />


</RelativeLayout>