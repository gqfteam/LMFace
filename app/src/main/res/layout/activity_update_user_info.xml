<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/update_user_info_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ToolbarTheme" >
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/mediumxsp"
                    android:text="选择省份："/>
                <AutoCompleteTextView
                    android:id="@+id/select_update_user_info_provinces"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/smallhdp"
                    android:background="@drawable/seat_eat_num_red_spinner_shap"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:cursorVisible="false"
                    android:hint="点击选择省份"
                    android:textColorHint="@color/gary_dark"
                    android:digits=""
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/mediumxsp"
                    android:text="选择城市："/>
                <AutoCompleteTextView
                    android:id="@+id/select_update_user_info_city"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/smallhdp"
                    android:background="@drawable/seat_eat_num_red_spinner_shap"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:cursorVisible="false"
                    android:hint="点击选择城市"
                    android:textColorHint="@color/gary_dark"
                    android:digits=""
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/mediumxsp"
                    android:text="选择大学："/>
                <AutoCompleteTextView
                    android:id="@+id/select_update_user_info_college"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/smallhdp"
                    android:background="@drawable/seat_eat_num_red_spinner_shap"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:cursorVisible="false"
                    android:hint="点击选择大学"
                    android:textColorHint="@color/gary_dark"
                    android:digits=""
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/mediumxsp"
                    android:text="昵称："/>
                <EditText
                    android:id="@+id/update_user_info_nickname"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/smallhdp"
                    android:background="@drawable/seat_eat_num_red_spinner_shap"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:cursorVisible="false"
                    android:hint="输入昵称"
                    android:textColorHint="@color/gary_dark"
                    />

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/mediumxsp"
                android:text="性别："/>
            <RadioGroup
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/update_user_info_man"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="男"
                    android:textSize="@dimen/mediumxsp"
                    android:textColor="@color/black"
                    android:button="@drawable/sex_selector"/>
                <RadioButton
                    android:id="@+id/update_user_info_woman"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="女"
                    android:textSize="@dimen/mediumxsp"
                    android:textColor="@color/black"
                    android:button="@drawable/sex_selector"/>
            </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/mediumxsp"
                    android:text="联系电话："/>
                <EditText
                    android:id="@+id/update_user_info_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/smallhdp"
                    android:background="@drawable/seat_eat_num_red_spinner_shap"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:cursorVisible="false"
                    android:hint="输入联系电话"
                    android:textColorHint="@color/gary_dark"
                    android:digits="1234567890"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/mediumxsp"
                    android:text="心情简介："/>

                <EditText
                    android:id="@+id/update_user_info_txt"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_height="@dimen/hugehxxxxdp"
                    android:background="@drawable/seat_eat_num_red_spinner_shap"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:cursorVisible="false"
                    android:hint="输入心情，简介"
                    android:textColorHint="@color/gary_dark"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/update_user_info_btn"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center"
        android:text="修改"
        android:textSize="@dimen/bigsp"
        android:textColor="@color/white"
        android:enabled="false"
        android:background="@drawable/apply_for_selector"/>

</LinearLayout>