<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
    android:layout_marginTop="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mediumhdp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/my_order_store_user_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="物主：gqf"
            android:textColor="@color/black"
            android:textSize="@dimen/bigsp"
            android:gravity="center_vertical"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            />
        <LinearLayout
            android:id="@+id/top_lin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/my_order_statu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/mediumsp"
                android:text="卖家已发货"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:paddingRight="@dimen/activity_horizontal_margin"

                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/whitesmoke"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hugehxxxxxdp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/my_order_goods_img"
            android:layout_margin="@dimen/mediummdp"
            android:layout_width="@dimen/hugehxxxxdp"
            android:layout_height="@dimen/hugehxxxxdp"
            android:src="@drawable/ic_launcher"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:id="@+id/my_order_msg_rel"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="@dimen/mediummdp"
                android:id="@+id/my_order_goods_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallhdp"
                android:text="daaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaas"
                android:lines="2"
                android:textSize="@dimen/mediumsp"
                android:textColor="@color/black"
                android:paddingRight="@dimen/activity_horizontal_margin"/>
            <TextView
                android:layout_below="@+id/my_order_goods_name"
                android:id="@+id/my_order_goods_classification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="分类：电子产品/电脑"
                android:textSize="@dimen/mediumsp"
                android:layout_marginTop="@dimen/smallmdp"
                android:layout_marginBottom="@dimen/smallmdp"/>
            <TextView
                android:layout_below="@+id/my_order_goods_classification"
                android:id="@+id/my_order_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥2121"
                android:textSize="@dimen/mediumsp"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:id="@+id/my_order_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X2"
                android:textSize="@dimen/mediumsp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/my_order_goods_price"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/whitesmoke"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_horizontal_margin">
        <TextView
            android:id="@+id/ym_order_goods_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:text="共1件商品"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/smallsp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:text="合计：¥"
            android:textColor="@color/black"
            android:textSize="@dimen/smallsp"
            />
        <TextView
            android:id="@+id/my_order_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:text="13.00"
            android:textColor="@color/black"
            android:textSize="@dimen/mediumxsp"
            android:paddingRight="@dimen/smallmdp"
            />
        <TextView
            android:id="@+id/my_order_courier_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:text="(含运费¥10.00)"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/smallsp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/whitesmoke"/>
    <LinearLayout
        android:id="@+id/commit_get_goods_lin"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:gravity="right">
        <Button
            android:id="@+id/commit_cancel_goods_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/smallmdp"
            android:background="@drawable/apply_for_selector"
            android:textSize="@dimen/bigsp"
            android:textColor="@color/white"
            android:text="取消订单"
            android:visibility="gone"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            />
        <Button
            android:id="@+id/commit_get_goods_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/smallmdp"
            android:background="@drawable/apply_for_selector"
            android:textSize="@dimen/bigsp"
            android:textColor="@color/white"
            android:text="确定发货"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            />

    </LinearLayout>
</LinearLayout>