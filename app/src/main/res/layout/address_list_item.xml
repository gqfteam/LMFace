<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
                android:layout_height="@dimen/hugehxxxxxdp"
              android:paddingTop="@dimen/activity_horizontal_margin"
              android:background="@color/white"
              android:layout_marginBottom="@dimen/activity_horizontal_margin"
    >

    <LinearLayout
        android:id="@+id/address_msg_lin"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="?android:selectableItemBackground"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/address_item_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="郭青枫"
                android:gravity="bottom"
                android:textSize="@dimen/mediumxsp"
                android:textColor="@color/black"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
            <TextView
                android:id="@+id/address_item_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="12345678"
                android:gravity="bottom|right"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textSize="@dimen/mediumxsp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <TextView
            android:id="@+id/address_item_msg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/mediumsp"
            android:gravity="center_vertical"
            android:text="hdasdhakjlsdnljahsdkjahsdkjahndkjlasjkfdbaskjcbkajbvkhajfvkjhadkjfhks;djfhn;kdsjnfkjlsdckjsad"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="@color/black"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/whitesmoke"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">
            <CheckBox
                android:id="@+id/address_item_check"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/smallmdp"
                android:button="@drawable/sex_selector"
                android:text="设为默认地址"
                android:textColor="@color/black"
                android:textSize="@dimen/mediumsp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/address_item_edi_lin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/edi_img"
                android:scaleType="centerInside"
                android:layout_margin="@dimen/tinymdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="编辑"
                android:textSize="@dimen/mediumsp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/address_item_delect_lin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/delect_img"
                android:scaleType="centerInside"
                android:layout_margin="@dimen/tinymdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="删除 "
                android:textSize="@dimen/mediumsp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gary"/>
</LinearLayout>