<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <TextView
        android:id="@+id/friends_list_item_chart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bigmdp"
        android:background="@color/whitesmoke"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:textColor="@color/gary_dark"
        android:textSize="@dimen/mediumsp"
        android:text="A"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/smallhdp"
        android:layout_marginBottom="@dimen/mediummdp"
        android:layout_marginTop="@dimen/mediummdp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/friends_list_item_img"
            android:layout_width="@dimen/smallhdp"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/friends_list_item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="gqf"
            android:textSize="@dimen/mediumxsp"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/tinyhdp"
        />

</LinearLayout>
