<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_chat"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f3f7f8" >
    <com.lmface.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_alignParentTop="true"
        android:layout_height="60dp"
        android:layout_width="match_parent"

        />

    <TextView
        android:id="@+id/user_id_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:layout_centerHorizontal="true"
        android:text="djsjsjsj"
        android:layout_alignBottom="@+id/title_bar"
        android:textSize="@dimen/smallsp"
        />

    <TextView
        android:id="@+id/tv_new_news"
        android:visibility="gone"
        android:gravity="center"
        android:text="@string/add_confirm"
        android:textColor="@color/white"
        android:layout_below="@+id/title_bar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <!-- 聊天输入框 -->
        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/custom_facerelativelayout" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/rl_bottom"
        android:layout_below="@+id/title_bar"
        android:cacheColorHint="#0000"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:scrollbarStyle="outsideOverlay"
        android:stackFromBottom="true" />

</RelativeLayout><!-- From: file:/H:/java/andriodstudio/HX/qq/QQ1/app/src/main/res/layout/layout_chat.xml -->