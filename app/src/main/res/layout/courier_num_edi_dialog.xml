<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
    android:background="@color/whitesmoke">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <View
        android:layout_width="@dimen/hugehxxxxxxxdp"
        android:layout_height="1dp"/>
        <View
            android:layout_width="@dimen/hugehxxxxxxxdp"
            android:layout_height="1dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:text="请输入快递号"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/mediumxsp"
        />
    <EditText
        android:id="@+id/courier_edi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        style="@style/apply_for_edi_style"
        android:layout_marginBottom="@dimen/tinyhdp"
        android:layout_marginTop="@dimen/tinyhdp"
        android:digits="1234567890"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mediumhdp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/courier_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/mediumsp"
            android:background="@color/gary_dark"
            />
        <Button
            android:id="@+id/courier_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/mediumsp"
            android:background="@color/colorPrimary"
            />
    </LinearLayout>

</LinearLayout>