<?xml version="1.0" encoding="utf-8"?><!-- 单个按钮效果 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按下时 -->
    <item android:state_pressed="true">
        <shape>
            <!--&lt;!&ndash; 填充色 &ndash;&gt;-->
            <!--<solid android:color="#3CC3F5" />-->
            <!--&lt;!&ndash;-->
                 <!--按钮四个圆角-->
                 <!--radius:半径-->
            <!--&ndash;&gt;-->
            <!--&lt;!&ndash; 边角的弧度尺寸 &ndash;&gt;-->
            <!--<corners android:radius="5dp" />-->

            <corners android:radius="5dp"/>
            <solid android:color="@color/white"/>
            <stroke android:width="1dp" android:color="#499BF7"/>

        </shape>
    </item>
    <!-- 未按下时 -->
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#499BF7"/>
        </shape>
    </item>

    <!-- 未按下时 -->
    <item android:state_activated="false">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#499BF7"/>
        </shape>
    </item>

    <!-- 默认样式 -->
    <item>
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#499BF7"/>
        </shape>
    </item>

</selector><!-- From: file:/H:/java/andriodstudio/HX/qq/QQ1/app/src/main/res/drawable/selector_circle_corner_button_white_bg.xml -->